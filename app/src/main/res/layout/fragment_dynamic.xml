<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorWhite">
        <RelativeLayout
            android:id="@+id/dynamic_item_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/dynamic_tab_count_1"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@drawable/dynamic_tab_text_color_selector"
                />
            <TextView
                android:id="@+id/dynamic_tab_1"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dynamic_tab_count_1"
                android:text="所有订单"
                android:textColor="@drawable/dynamic_tab_text_color_selector"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/dynamic_item_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/dynamic_tab_count_2"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@drawable/dynamic_tab_text_color_selector"
                />
            <TextView
                android:id="@+id/dynamic_tab_2"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dynamic_tab_count_2"
                android:text="待接单"
                android:textColor="@drawable/dynamic_tab_text_color_selector"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/dynamic_item_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/dynamic_tab_count_3"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@drawable/dynamic_tab_text_color_selector"
                />
            <TextView
                android:id="@+id/dynamic_tab_3"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dynamic_tab_count_3"
                android:text="待评价"
                android:textColor="@drawable/dynamic_tab_text_color_selector"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/dynamic_item_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/dynamic_tab_count_4"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@drawable/dynamic_tab_text_color_selector"
                />
            <TextView
                android:id="@+id/dynamic_tab_4"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dynamic_tab_count_4"
                android:text="已完成"
                android:textColor="@drawable/dynamic_tab_text_color_selector"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/dynamic_item_5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/dynamic_tab_count_5"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@drawable/dynamic_tab_text_color_selector"
                />
            <TextView
                android:id="@+id/dynamic_tab_5"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dynamic_tab_count_5"
                android:text="已退款"
                android:textColor="@drawable/dynamic_tab_text_color_selector"
                />
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/dynamic_tab_iamge"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:scaleType="matrix"
        android:src="@drawable/shape_circle" />

    <android.support.v4.view.ViewPager
        android:id="@+id/dynamic_viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v4.view.ViewPager>

</LinearLayout>