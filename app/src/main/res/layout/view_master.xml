<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:background="@color/colorWhite"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_height="120dp"
        android:layout_width="match_parent">
        <RelativeLayout
            android:id="@+id/master_info"
            android:layout_width="wrap_content"
            android:layout_height="120dp">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/master_tagPhoto"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/teacher_img"/>
            <TextView
                android:id="@+id/left_master_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="讲师——"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/master_tagPhoto"/>
            <TextView
                android:layout_marginTop="15dp"
                android:layout_height="20dp"
                android:layout_width="wrap_content"
                tools:text="潘之琳"
                android:textColor="@color/color_black"
                android:id="@+id/master_name"
                android:layout_toRightOf="@id/left_master_name"/>
            <TextView
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:id="@+id/master_intro"
                android:layout_below="@id/master_tagPhoto"
                tools:text="台湾清香斋弟子，擅长品茶论道"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginTop="11dp"
                android:layout_below="@id/master_intro"
                android:layout_marginLeft="20dp">
                <TextView
                    android:textSize="12sp"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="#F1F1F1"
                    android:id="@+id/master_tag1"
                    android:gravity="center"
                    android:text="台湾清香斋弟子"
                    />
                <TextView
                    android:textSize="12sp"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:id="@+id/master_tag2"
                    android:background="#F1F1F1"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="茶道大赛金奖"
                />
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:id="@+id/master_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/ic_launcher"/>
    </RelativeLayout>
    <Button
        android:text="取消关注"
        android:textColor="@color/colorWhite"
        android:background="@drawable/bt_cancel"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/cancel_focus"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/shallowGrey">
    </LinearLayout>
</LinearLayout>
