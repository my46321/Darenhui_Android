<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/exit_edit_evaluation"
        android:layout_width="@dimen/icon_close"
        android:layout_height="@dimen/icon_close"
        android:src="@drawable/ic_close_black"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/evaluate_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="40dp"
            android:text="非常满意"
            android:textColor="@drawable/evaluate_text_color_selector"/>
        <TextView
            android:id="@+id/evaluate_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="基本满意"
            android:textColor="@drawable/evaluate_text_color_selector"/>
        <TextView
            android:id="@+id/evaluate_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="不满意"
            android:textColor="@drawable/evaluate_text_color_selector"/>
        <TextView
            android:id="@+id/evaluate_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="差评！"
            android:textColor="@drawable/evaluate_text_color_selector"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/colorGrey">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textSize="15dp"
        android:id="@+id/edit_evaluation"
        android:background="#F8F8F8"
        android:hint="您的建议很重要，来点评一下吧！"
        android:textColorHint="@color/hint"
        />
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/comment_submit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="提交评价"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button"
            />
    </RelativeLayout>
</LinearLayout>