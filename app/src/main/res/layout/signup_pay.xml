<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wait_pay_scroll">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <ImageView
                    android:id="@+id/exit_order"
                    android:layout_width="@dimen/icon_close"
                    android:layout_height="@dimen/icon_close"
                    android:src="@drawable/ic_close_black"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"/>
                <!--<TextView-->
                <!--android:layout_width="80dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="取消订单"-->
                <!--android:textColor="@color/hint"-->
                <!--android:textSize="18dp"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_marginTop="34dp"-->
                <!--android:layout_marginRight="7dp"/>-->
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="待支付"
                    android:textSize="20dp"
                    android:textColor="@color/color_black"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/wait_accept_image1"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:src="@drawable/test"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:textSize="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:maxLines="1"
                    android:layout_height="35dp"
                    android:id="@+id/wait_accept_course1"
                    android:layout_toRightOf="@id/wait_accept_image1"
                    android:text="【茗礼】茶道美学系列课程"
                    android:textColor="@color/color_black"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:id="@+id/wait_accept_course2"
                    android:layout_toRightOf="@id/wait_accept_image1"
                    android:layout_marginLeft="26dp"
                    android:text="test"
                    android:maxLines="1"
                    android:textSize="12dp"
                    android:layout_below="@id/wait_accept_course1"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="20dp"
                android:background="@color/hint"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F6F6F6">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:text="价格"
                    android:textSize="14dp"
                    android:textColor="@color/color_black"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/wait_pay_tag1"/>
                <TextView
                    android:id="@+id/wait_pay_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textSize="16dp"
                    android:textColor="@color/color_black"
                    android:layout_alignTop="@id/wait_pay_tag1"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="3600元/人"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_below="@id/wait_pay_tag1"
                    android:layout_height="50dp"
                    android:text="时长"
                    android:textColor="@color/color_black"
                    android:textSize="14dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/wait_pay_tag2"
                    />
                <TextView
                    android:id="@+id/wait_pay_duration"
                    android:layout_below="@id/wait_pay_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textSize="16dp"
                    android:textColor="@color/color_black"
                    android:layout_alignTop="@id/wait_pay_tag2"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="6节课×3小时"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="时间"
                    android:textSize="14dp"
                    android:textColor="@color/color_black"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/wait_pay_duration"
                    android:id="@+id/wait_pay_tag3"/>
                <TextView
                    android:id="@+id/wait_pay_time"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textSize="16dp"
                    android:textColor="@color/color_black"
                    android:layout_alignTop="@id/wait_pay_tag3"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="周五班(每周五下午14:00-17:00)" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="地点"
                    android:textColor="@color/color_black"
                    android:textSize="14dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/wait_pay_time"
                    android:id="@+id/wait_pay_tag4"/>
                <TextView
                    android:id="@+id/wiat_pay_locus"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textSize="16dp"
                    android:textColor="@color/color_black"
                    android:layout_alignTop="@id/wait_pay_tag4"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="东南大学九龙湖校区教2" />
            </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/hint"></View>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_marginTop="25dp"
                android:background="@color/colorGrey"
                ></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_marginLeft="12dp"
                    android:textSize="12dp"
                    android:textColor="@color/color_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wait_pay_master1"
                    android:text="本科生 东南大学"/>
                <View
                    android:layout_below="@id/wait_pay_master1"
                    android:id="@+id/temp_view1"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="0.5dp"
                    android:background="@color/colorGrey"
                    android:layout_centerHorizontal="true"
                    ></View>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/test"
                    android:id="@+id/wait_pay_master_image"
                    android:layout_below="@id/temp_view1"
                    android:scaleType="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:textColor="@color/color_black"
                    android:textSize="16dp"
                    android:text="潘之琳"
                    android:id="@+id/wait_pay_master_name"
                    android:layout_alignTop="@id/wait_pay_master_image"
                    android:layout_toRightOf="@id/wait_pay_master_image"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:id="@+id/wait_pay_phone"
                    android:layout_below="@id/wait_pay_master_name"
                    android:layout_toRightOf="@id/wait_pay_master_image"
                    android:text="15382893023"
                    android:textColor="@color/color_black"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"/>
                <!--<Button-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="24dp"-->
                <!--android:id="@+id/wait_pay_revise"-->
                <!--android:layout_alignTop="@id/wait_pay_phone"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_marginRight="17dp"-->
                <!--android:background="@color/colorBrown"-->
                <!--android:text="修改信息"-->
                <!--android:textColor="@color/colorWhite"-->
                <!--/>-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorGrey"
                    android:layout_below="@id/wait_pay_phone"
                    android:layout_marginTop="10dp"
                    ></View>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_below="@id/wait_pay_phone"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorGrey"></View>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/textView2"
                        android:textSize="16dp"
                        android:textColor="@color/color_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:text="备注信息：" />
            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/wait_pay_comment"
                android:background="@null"
                android:hint="点击添加"
                android:textColorHint="@color/shallowGrey"
                android:textColor="@color/color_black"
                android:textSize="14dp"
                android:layout_alignTop="@+id/textView2"
                android:layout_toRightOf="@id/textView2"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/textView2"
                android:layout_marginTop="15dp"
                android:background="@color/colorGrey"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:src="@drawable/ic_contact_phone"
                        android:id="@+id/wait_accept_tag"/>
                    <TextView
                        android:id="@+id/service_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/contact_color"
                        android:text="联系客服" />
                </LinearLayout>
            </RelativeLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
        </LinearLayout>
    </LinearLayout>
</ScrollView>
<RelativeLayout
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_alignParentBottom="true">
    <ImageView
        android:layout_marginLeft="20dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/money"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/wait_pay_price"
        android:layout_marginLeft="50dp"
        android:textSize="20dp"
        android:layout_width="120dp"
        android:layout_height="26dp"
        android:layout_centerVertical="true"
        android:text="3600元"
        android:textStyle="bold"
        android:textColor="@color/color_black"/>
    <Button
        android:id="@+id/pay_button"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:background="@drawable/buttonsquare"
        android:text="生成订单"
        android:textSize="25dp"
        android:textColor="@color/colorWhite"
        android:layout_alignParentRight="true"/>
</RelativeLayout>

</RelativeLayout>