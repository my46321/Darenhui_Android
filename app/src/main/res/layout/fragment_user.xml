<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorWhite">
            <ImageView
                android:id="@+id/profile_user_fragment"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                android:scaleType="center"
                 />
        <com.andexert.library.RippleView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            rv_centered="true"
            app:rv_color="@color/color_black">
            <ImageView
                android:id="@+id/user_modify_info"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_user_change_info"/>
        </com.andexert.library.RippleView>
            <ImageView
                android:id="@+id/gender_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="90dp"/>
            <TextView
                android:id="@+id/username_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/profile_user_fragment"
                android:layout_marginTop="25dp"
                tools:text="潘之琳"
                android:textColor="@color/color_black"
                android:textSize="16dp"
                />

            <View
                android:id="@+id/seperate_line"
                android:layout_below="@id/username_text"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/profile_user_fragment"
                android:background="@color/colorGrey" />
            <LinearLayout
                android:layout_below="@id/seperate_line"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/profile_user_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <com.andexert.library.RippleView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            rv_centered="true"
            app:rv_color="@color/color_black">
                <RelativeLayout
                    android:id="@+id/focus_info1"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
            <TextView
                android:id="@+id/focus_teacher"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="18dp"
                android:textColor="@color/color_black"
                android:layout_weight="1"
                />
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/focus_teacher"
                android:textColor="@color/color_black"
                android:textSize="12dp"
                android:text="关注的讲师"
                />
            </RelativeLayout>
        </com.andexert.library.RippleView>
                <com.andexert.library.RippleView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    rv_centered="true"
                    app:rv_color="@color/color_black">
                <RelativeLayout
                    android:id="@+id/focus_info2"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/try_course"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="18dp"
                    android:textColor="@color/color_black"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/try_course"
                    android:text="尝试的课程"
                    android:textSize="12dp"
                    android:textColor="@color/color_black"/>
                </RelativeLayout>
                </com.andexert.library.RippleView>
                <com.andexert.library.RippleView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    rv_centered="true"
                    app:rv_color="@color/color_black">
                <RelativeLayout
                    android:id="@+id/focus_info3"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/collect_course"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="18dp"
                    android:textColor="@color/color_black"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/collect_course"
                    android:text="收藏的课程"
                    android:textSize="12dp"
                    android:textColor="@color/color_black"/>
                </RelativeLayout>
                </com.andexert.library.RippleView>

            </LinearLayout>

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:textColor="@color/color_black"
            android:textSize="14dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"/>
        <RelativeLayout
            android:layout_marginLeft="19dp"
            android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/user_img1"
            android:src="@drawable/ic_location1"/>
        <TextView
            android:id="@+id/school_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_img1"
            tools:text="东南大学（九龙湖校区）"
            android:textColor="@color/color_black"
            android:layout_marginTop="2dp"
            android:textSize="14dp"
            />

    </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="19dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/user_img2"
                android:src="@drawable/ic_student"/>

        <TextView
            android:id="@+id/enrollmentYear_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/user_img2"
            android:textColor="@color/color_black"
            tools:text="2015级本科生"
            android:textSize="14dp"
            />

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mobile_num_tag"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorGrey" />

            <TextView
                android:id="@+id/phoneNumber_prompt_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="25dp"
                android:text="注册手机："
                android:textColor="@color/color_black"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/phoneNumber_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="115dp"
                tools:text="15667899876"
                android:textSize="16sp"
                />
    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:gravity="center"
            android:divider="@drawable/divider"
            android:showDividers="middle|end|beginning"

            >
            <com.andexert.library.RippleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                rv_centered="true"
                app:rv_color="@color/color_black">
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/focusTeacher"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/myfocus"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="16dp"/>
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="23dp"
                    android:text="我的关注"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_black"
                    android:layout_marginLeft="40dp"
                    android:textSize="16dp"/>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ic_arrow"/>
            </RelativeLayout>
            </com.andexert.library.RippleView>
            <com.andexert.library.RippleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                rv_centered="true"
                app:rv_color="@color/color_black">
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/collectLesson">
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/lovelesson"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="16dp"/>
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="23dp"
                    android:text="我的收藏"
                    android:textColor="@color/color_black"
                    android:layout_marginLeft="40dp"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"/>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ic_arrow"/>
            </RelativeLayout>
            </com.andexert.library.RippleView>
            <com.andexert.library.RippleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                rv_centered="true"
                app:rv_color="@color/color_black">
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/experienceLesson">
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/experiencecollect"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="17dp"/>
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="23dp"
                    android:text="我的体验"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_black"
                    android:layout_marginLeft="40dp"
                    android:textSize="16dp" />
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ic_arrow"/>
            </RelativeLayout>
            </com.andexert.library.RippleView>
            <com.andexert.library.RippleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                rv_centered="true"
                app:rv_color="@color/color_black">
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/contact_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/contact"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="17dp"/>
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="23dp"
                    android:text="联系我们"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_black"
                    android:layout_marginLeft="40dp"
                    android:textSize="16dp"/>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ic_arrow"/>
            </RelativeLayout>
            </com.andexert.library.RippleView>
        </LinearLayout>
        <Button
            android:id="@+id/logoff_text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@id/mobile_num_tag"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:text="退出登陆"
            android:background="@drawable/button"
            android:textColor="#ffff"/>
    </LinearLayout>

</ScrollView>